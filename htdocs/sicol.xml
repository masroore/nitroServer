<?xml version="1.0" encoding="utf-8" ?>
<codetemplate	xmlns="http://schemas.borland.com/Delphi/2005/codetemplates"
				version="1.0.0">
	<template name="sicol" invoke="manual">
		<description>SmartInspect LogColored</description>
		<author>Gurock Software</author>
		<point name="color">
			<text>clBlue</text>
			<hint>The background color of the message.</hint>
		</point>
		<point name="title">
			<text>Title</text>
			<hint>The title of the error message.</hint>
		</point>
		<code language="C" context="methodbody" delimiter="|"><![CDATA[SiMain->LogColored(|color|, "|title|");]]></code>
	</template>
</codetemplate>
