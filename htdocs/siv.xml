<?xml version="1.0" encoding="utf-8" ?>
<codetemplate	xmlns="http://schemas.borland.com/Delphi/2005/codetemplates"
				version="1.0.0">
	<template name="siv" invoke="manual">
		<description>SmartInspect LogValue</description>
		<author>Gurock Software</author>
		<point name="name">
			<text>Name</text>
			<hint>The name of the variable.</hint>
		</point>
		<point name="value">
			<text>Value</text>
			<hint>The value of the variable.</hint>
		</point>
		<code language="C" context="methodbody" delimiter="|"><![CDATA[SiMain->LogValue("|name|", |value|);]]></code>
	</template>
</codetemplate>
